<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.KostPhotosFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="137dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Foto Kost"
            app:autoSizeTextType="uniform"
            app:fontFamily="@font/manjari_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/photoUrl"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/photo1"
            android:layout_width="175dp"
            android:layout_height="150dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/photoUrl"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/photo2"
            android:layout_width="175dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/photoUrl"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/photo3"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/photo1"
            tools:src="@tools:sample/avatars" />

        <ProgressBar
            android:id="@+id/progressBarPhotoURL"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/photoUrl"
            app:layout_constraintEnd_toEndOf="@+id/photoUrl"
            app:layout_constraintStart_toStartOf="@+id/photoUrl"
            app:layout_constraintTop_toTopOf="@+id/photoUrl" />

        <ProgressBar
            android:id="@+id/progressBarPhoto1"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/photo1"
            app:layout_constraintEnd_toEndOf="@+id/photo1"
            app:layout_constraintStart_toStartOf="@+id/photo1"
            app:layout_constraintTop_toTopOf="@+id/photo1" />

        <ProgressBar
            android:id="@+id/progressBarPhotos2"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/photo2"
            app:layout_constraintEnd_toEndOf="@+id/photo2"
            app:layout_constraintStart_toStartOf="@+id/photo2"
            app:layout_constraintTop_toTopOf="@+id/photo2" />

        <ProgressBar
            android:id="@+id/progressBarPhotos3"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/photo3"
            app:layout_constraintEnd_toEndOf="@+id/photo3"
            app:layout_constraintStart_toStartOf="@+id/photo3"
            app:layout_constraintTop_toTopOf="@+id/photo3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>